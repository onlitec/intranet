# Configurações do ES-SERVIDOR
ESSERVIDOR_IP=192.168.1.100
ESSERVIDOR_API_KEY=1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Configurações do Flask
FLASK_SECRET_KEY=change-this-to-a-random-secret-key
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Configurações de Log
LOG_LEVEL=INFO

# Segurança/Criptografia (obrigatório em produção)
SYSTEM_SALT=change-this-to-a-random-salt
# Opcional: chave mestra para criptografar credenciais (se ausente, usa FLASK_SECRET_KEY)
INTRANET_MASTER_KEY=change-this-to-a-random-master-key

# Bootstrap do primeiro administrador (defina e apague após criar o admin)
BOOTSTRAP_TOKEN=change-this-to-a-random-bootstrap-token
